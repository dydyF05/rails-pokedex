<p id="notice"><%= notice %></p>

<h1 class="text text-primary">Moves</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moves.each do |move| %>
      <tr>
        <td><%= move.name %></td>
        <td><%= move.description %></td>
        <td><%= move.type.name %></td>
        <td><%= link_to 'Show', move, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_move_path(move), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', move, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Move', new_move_path, class: 'glyphicon glyphicon-plus' %>
